// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  googleId            String   @unique @map("google_id")
  email               String   @unique
  name                String?
  avatarUrl           String?  @map("avatar_url")
  dailyUsageCount     Int      @default(0) @map("daily_usage_count")
  dailyUsageResetAt   DateTime? @map("daily_usage_reset_at")
  totalApiCost        Decimal  @default(0) @map("total_api_cost") @db.Decimal(10, 2)
  createdAt           DateTime @default(now()) @map("created_at")
  updatedAt           DateTime @updatedAt @map("updated_at")

  books Book[]

  @@map("users")
}

model Book {
  id                String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId            String   @map("user_id") @db.Uuid
  title             String?  @db.VarChar(500)
  originalFilename  String?  @map("original_filename") @db.VarChar(500)
  originalUrl       String?  @map("original_url")
  condensedUrl      String?  @map("condensed_url")
  previewUrl        String?  @map("preview_url")
  originalPages     Int?     @map("original_pages")
  condensedPages    Int?     @map("condensed_pages")
  condensingLevel   String?  @map("condensing_level") @db.VarChar(20) // light/medium/heavy
  compressionRatio  Decimal? @map("compression_ratio") @db.Decimal(4, 2)
  status            String   @default("uploaded") @db.VarChar(50) // uploaded/processing/completed/failed
  processingProgress Int     @default(0) @map("processing_progress")
  errorMessage      String?  @map("error_message")
  apiCost           Decimal  @default(0) @map("api_cost") @db.Decimal(10, 2)
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  user     User       @relation(fields: [userId], references: [id])
  chapters Chapter[]
  processingJobs ProcessingJob[]

  @@map("books")
}

model Chapter {
  id             String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  bookId         String   @map("book_id") @db.Uuid
  chapterNumber  Int      @map("chapter_number")
  title          String?  @db.VarChar(500)
  originalUrl    String?  @map("original_url")
  condensedUrl   String?  @map("condensed_url")
  originalPages  Int?     @map("original_pages")
  condensedPages Int?     @map("condensed_pages")
  status         String   @default("pending") @db.VarChar(50) // pending/processing/completed/failed/skipped
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  book Book @relation(fields: [bookId], references: [id])

  @@map("chapters")
}

model ProcessingJob {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  bookId    String   @map("book_id") @db.Uuid
  jobType   String   @map("job_type") @db.VarChar(50) // split/condense/preview/combine
  status    String   @db.VarChar(50)
  message   String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  book Book @relation(fields: [bookId], references: [id])

  @@map("processing_jobs")
}